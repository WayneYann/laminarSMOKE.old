Kinetics
{
	folder	   		"kinetics-GLOBAL";
	inertSpecies 		N2;
}

PhysicalModel
{
	strangAlgorithm 		"MomentumTransportReaction";
	homogeneousReactions 		on;
	energyEquation			on;
	constPressureBatchReactor 	true;

	massDiffusionInEnergyEquation	on;
	diffusivityCorrection		"semi-implicit";

	diffusivityModel		"multi-component";
}

OdeHomogeneous
{
	odeSolver 	"OpenSMOKE";
	relTolerance 	1e-7;
	absTolerance 	1e-12;
	maximumOrder 	5;
	fullPivoting 	false;
}

Spark
{
	spark 		on;
	position    	(5.95e-3  0.0 1.5e-3);
	time		0.;
	temperature 	2205;
	duration 	0.025;
	diameter 	1.5e-3;
}

LewisNumbers
{
	O2  1.0;
